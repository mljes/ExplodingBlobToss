<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_left_to_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_right_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_right_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_left_to_right</item>

    </style>
    <style name="AppTheme_PeerSetup" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:fontFamily">@font/patrick_hand</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FCF8F8</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text" parent="title_text">
        <item name="android:textColor">@color/myWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">52dp</item>
        <item name="android:background">@drawable/rounded_button_corners</item>
        <item name="android:textAppearance">@style/button_text</item>
        <item name="android:textColor">@color/myWhite</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SubTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/patrick_hand</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Normal_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/patrick_hand</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>

</resources>
