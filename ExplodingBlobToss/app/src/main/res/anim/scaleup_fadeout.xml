<?xml version="1.0" encoding="utf-8"?>
<!-- Animation adapted from https://stackoverflow.com/questions/32992221/android-animation-to-shrink-and-fade-out-a-view-at-the-same-time-->

<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:fromXScale="1"
        android:toXScale="2"
        android:fromYScale="1"
        android:toYScale="2"
        android:duration="2000"
        android:pivotY="50%"
        android:pivotX='50%'
         >
    </scale>
    <alpha
    android:fromAlpha="1"
    android:toAlpha="0"
    android:duration="5000" >
    </alpha>
</set>